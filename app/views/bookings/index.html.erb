<!-- Banner -->
<div class="banner text-center">
  <div class="container my-4">
    <h1><strong>My Bookings</strong></h1>
  </div>
</div>

<div class="container-fluid px-0">
  <div class="d-flex flex-column flex-lg-row" style="min-height: 100vh;">
    <div class="w-100 w-lg-50 overflow-auto p-4 bg-light" style="max-height: 100vh;">
      <div class="row row-cols-1 g-3">
        <% @bookings.each do |booking| %>
          <div class="col">
            <div class="card-product p-4 border rounded-5 shadow-sm bg-white">
              <!-- Desk Photo -->
              <% if booking.desk.photo.attached? %>
                <%= cl_image_tag booking.desk.photo.key, class: "img-fluid rounded mb-3" %>
              <% end %>
              <div class="card-product-infos">
                <h2>Desk: <%= booking.desk.title %></h2>
                <p>Address: <%= booking.desk.address %></p>
                <p>Start: <%= booking.start_time %></p>
                <p>End: <%= booking.end_time %></p>
                <p>Status: <%= booking.status %></p>
                <%= link_to 'Update', edit_booking_path(booking), class: 'btn btn-ghost mt-2 btn-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
