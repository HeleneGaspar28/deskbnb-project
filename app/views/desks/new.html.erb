<h1>List Your Desk</h1>

<%= simple_form_for @desk do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price_per_hour %>
  <%= f.input :address,
    input_html: {
      data: { address_autocomplete_target: "address" },
    },
    wrapper_html: {
      data: {
        controller: "address-autocomplete",
        address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
      }
    }
  %>

  <%= f.button :submit, "Create Desk" %>
<% end %>
